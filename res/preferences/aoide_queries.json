    {
        "@type": "group",
        "label": "Tempo",
        "items": [
            {
                "@type": "query",
                "label": "<80 bpm",
                "sort": "+musicTempoBpm,+trackArtist",
                "filter": {
                    "all": [
                        {
                            "numeric": [
                                "musicTempoBpm",
                                {
                                    "gt": 0
                                }
                            ]
                        },
                        {
                            "numeric": [
                                "musicTempoBpm",
                                {
