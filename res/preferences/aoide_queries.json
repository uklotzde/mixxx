    {
        "@type": "group",
        "label": "Selection",
        "items": [
            {
                "@type": "query",
                "label": "DJ",
                "notes": "Selected tracks for DJing with known BPM (sorted)",
                "sort": "+musicTempoBpm,+trackArtist",
                "filter": {
                    "all": [
                        {
                            "tag": {
                                "facets": [
                                    "selection"
                                ],
                                "label": {
                                    "matches": "dj"
                                }
                            }
                        },
                        {
                            "numeric": [
                                "musicTempoBpm",
                                {
                                    "gt": 0
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    },
    {
        "@type": "group",
        "label": "Library",
        "items": [
            {
                "@type": "query",
                "label": "Missing album artist or title",
                "notes": "Tracks with an album title but no album artist or vice versa.",
                "sort": "+trackNumber",
                "filter": {
                    "any": [
                        {
                            "all": [
                                {
                                    "not": {
                                        "titlePhrase": {
                                            "scope": "album",
                                            "nameTerms": []
                                        }
                                    }
                                },
                                {
                                    "actorPhrase": {
                                        "scope": "album",
                                        "roles": [
                                            0
                                        ],
                                        "nameTerms": []
                                    }
                                }
                            ]
                        },
                        {
                            "all": [
                                {
                                    "not": {
                                        "actorPhrase": {
                                            "scope": "album",
                                            "roles": [
                                                0
                                            ],
                                            "nameTerms": []
                                        }
                                    }
                                },
                                {
                                    "titlePhrase": {
                                        "scope": "album",
                                        "nameTerms": []
                                    }
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "@type": "query",
                "label": "Missing track number",
                "notes": "Album tracks with missing track number.",
                "filter": {
                    "all": [
                        {
                            "not": {
                                "actorPhrase": {
                                    "scope": "album",
                                    "roles": [
                                        0
                                    ],
                                    "nameTerms": []
                                }
                            }
                        },
                        {
                            "not": {
                                "numeric": [
                                    "trackNumber",
                                    {
                                        "gt": 0
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "@type": "query",
                "label": "Legacy genre tags",
                "notes": "Tracks with genre separator \" - \".",
                "filter": {
                    "tag": {
                        "facets": [
                            "gnre"
                        ],
                        "label": {
                            "contains": " - "
                        }
                    }
                }
            },
            {
                "@type": "query",
                "label": "Unplayable tracks",
                "notes": "Tracks with invalid/unknown duration or sample rate.",
                "filter": {
                    "any": [
                        {
                            "not": {
                                "numeric": [
                                    "audioDurationMs",
                                    {
                                        "gt": 0
                                    }
                                ]
                            }
                        },
                        {
                            "not": {
                                "numeric": [
                                    "audioSampleRateHz",
                                    {
                                        "gt": 0
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "@type": "query",
                "label": "Tracked sources",
                "notes": "Tracks with sources that have been imported by the Media Tracker.",
                "filter": {
                    "condition": "sourceTracked"
                },
                "sort": "-updatedAt"
            },
            {
                "@type": "query",
                "label": "Untracked sources",
                "notes": "Tracks with sources that are unknown to the Media Tracker.",
                "filter": {
                    "condition": "sourceUntracked"
                },
                "sort": "-updatedAt"
            }
        ]
    }
